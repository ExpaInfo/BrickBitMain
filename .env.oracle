APP_NAME='Brick Hill'
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost
FAKE_NOTIFICATIONS=false
L5_SWAGGER_GENERATE_ALWAYS=false

MAIN_ACCOUNT_ID=1

CI_PIPELINE_IID=oracle_production

SESSION_COOKIE=bh_session
SESSION_DOMAIN=
SESSION_LIFETIME=10800
SESSION_SECURE_COOKIE=false

MAINTENANCE_KEY=oracle_maintenance_secret

# Minimal logging to save disk space
LOG_CHANNEL=single
LOG_LEVEL=warning
LOG_DB_QUERIES=false

JS_ASSET_PATH=/dist/js/
CSS_ASSET_PATH=/dist/css/

# Disable CAPTCHA for now (can add later)
RECAPTCHA_SECRET=
RECAPTCHA_PUBLIC=
HCAPTCHA_SECRET=0x0000000000000000000000000000000000000000
HCAPTCHA_PUBLIC=10000000-ffff-ffff-ffff-000000000001

# SQLite database for minimal resource usage
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/brickhill/database/database.sqlite

# File-based caching (no Redis needed)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Local mail logging (no SMTP overhead)
MAIL_MAILER=log

# Local storage (no S3 needed)
STORAGE_DOMAIN=
STORAGE_PENDING_512=/default/pending.png
STORAGE_PENDING_SET=/default/pendingset.png
STORAGE_DECLINED_512=/default/declined.png
STORAGE_DECLINED_SET=/default/declinedset.png
STORAGE_AVATARS_LOC=/images/avatars/
STORAGE_ITEMS_LOC=/v2/images/shop/thumbnails/
STORAGE_FILE_LOC=/var/www/brickhill/storage/app/public
STORAGE_LOCAL_LOC=/var/www/brickhill/storage/app/public

# Disable external services for minimal setup
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=
AWS_BUCKET=

# Disable Redis completely
REDIS_HOST=
REDIS_PORT=
REDIS_DEFAULT_DB=

# Laravel Passport (will be set up during deployment)
PASSPORT_PERSONAL_ACCESS_CLIENT_ID=1
PASSPORT_PERSONAL_ACCESS_CLIENT_SECRET=

# Disable Stripe for now
STRIPE_TESTING_KEY_PUBLIC=
STRIPE_TESTING_KEY_SECRET=
STRIPE_TESTING_WEBHOOK_SECRET=
